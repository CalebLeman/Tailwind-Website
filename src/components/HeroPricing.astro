---
import { HEROPRICE } from "../config";
const { TEXT, LINKS, IMAGES } = HEROPRICE;
---

<div class="relative content-center flex-none font-mono">
    <!-- Background Image -->
    <img
        src={IMAGES.MAIN.src}
        alt={IMAGES.MAIN.alt}
        
    />
    <!-- Title -->
    <div class="absolute text-white top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 grow">
        <h1 class="md:text-8xl text-4xl drop-shadow-lg border-solid rounded-2xl border-2 p-8 text-center backdrop-blur">
            <div>
                {TEXT.H1}
            </div>
            <div class="font-medium">
                {TEXT.H2}
            </div>
        </h1>
    </div>
</div>